---
import type { Props } from "astro";
import CircleWithText from "./CircleWithText.astro";

const {heading} = Astro.props as Props
---

<section id="circular-components" class="dark-background">
    <h3>{heading}</h3>
    <div class="circles-set">
     <CircleWithText image="url(/images/sam-moghadam-khamseh-baII27W6z7k-unsplash.jpg)"  label="Quality"/>
     <CircleWithText image="url(/images/milad-fakurian-58Z17lnVS4U-unsplash.jpg)"  label="Innovation"/>
     <CircleWithText image="url(/images/daniele-franchi-cLxX7ssQfp8-unsplash.jpg)"  label="Integrity"/>
        
    </div>
</section>


<style>

section#circular-components h3{
    color: white;
    text-align: center;
    font-weight: 400;
    text-transform: uppercase;
    font-size: 16px;
    padding: 16px 0;
}
section#circular-components{
    display: flex;
    flex-direction: column;
    min-height: 250px;

}

section#circular-components .circles-set{
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    margin-top: 20px;
}



</style>